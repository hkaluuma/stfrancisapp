<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorgradient"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <!-- Logo or Image -->
    <ImageView
        android:id="@+id/school_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_school_logo"
        android:contentDescription="@string/school_logo_desc"
        android:layout_marginBottom="24dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:drawableStart="@drawable/ic_user"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginBottom="12dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:drawableStart="@drawable/ic_lock"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/rounded_edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button_text"
        android:backgroundTint="@color/ourblue"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Sign Up Link -->
    <TextView
        android:id="@+id/signup_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_link_text"
        android:textColor="@color/ourblue"
        android:textSize="14sp"
        android:gravity="center" />
</LinearLayout>